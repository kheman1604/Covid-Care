<div class="ocontainer">
    <h1>Search For Patient</h1>
    <form action="/view/search" method="POST">
        <input type="text"   name="name" placeholder="Search for Patient Name"><br><br>
    <button>Submit</button></form>
  
    <br><br><br><br>
	<div class="container">
		
        <% patient.forEach(function(a){ %>
		<a href="/viewpat/<%= a._id %>" class="card">
				<img src="/assets/pat1.jpg" style="object-fit: cover;" width="100%">
					<h4>
						<%=a.name%> 
                    </h4>
                    <h4>
                        <%=a.bloodgroup%> 
                    </h4>
                    <h4>
                        <%=a.status%> 
                    </h4>
				</a>
		<%
		});%>
			</div>
			
			
		</div>  
      
</body>
